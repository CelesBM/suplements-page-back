{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ],
  "build": {
    "env": {
      "DATABASE_URL": "@DATABASE_URL"
    },
    "commands": {
      "build": "prisma generate && tsc"
    }
  }
}
