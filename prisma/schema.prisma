generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Model de usuario:

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  code String?
  verified Boolean? @default(false)
  orders Order[]
}

//Model de los pedidos:

model Order{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  price Float
  shippingCost Float
  items Item[]
  shippingDetails ShippingDetails[]
  total Float
  user Int
  users User @relation(fields: [user], references: [id])
}

//Model de un item de pedido:

model Item{
  tableId Int @id @default(autoincrement())
  description String
  id Int
  price Float
  quantity Int
  title String
  img String
  order Int
  orders Order @relation(fields: [order], references: [id])
}

//Detalles del env√≠o:

model ShippingDetails{
  id Int @id @default(autoincrement())
  name String
  cellphone String
  location String
  address String
  order Int
  orders Order @relation(fields: [order], references: [id])
}

